{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "flake8.args": [
        "--max-line-length=90"
    ],
    "python.formatting.provider": "none",
    "cSpell.words": [
        "lblue",
        "lcyan",
        "lightcyan",
        "lightgreen",
        "lightpurple",
        "lightred",
        "lred",
        "windll"
    ],
    "editor.formatOnSave": true
}